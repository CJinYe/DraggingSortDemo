<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:paddingTop="10dp">
    <ImageView
        android:id="@+id/iv_book_cover"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/general__shared__txt"/>
    <TextView
        android:textColor="@color/white"
        android:textSize="@dimen/book_name"
        android:id="@+id/tv_book_cover_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/iv_book_cover"
        android:layout_alignRight="@+id/iv_book_cover"
        android:layout_alignBottom="@+id/iv_book_cover"
        android:layout_alignTop="@+id/iv_book_cover"
        android:gravity="center_horizontal"
        android:paddingTop="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="书名"/>
    <TextView
        android:layout_alignLeft="@+id/iv_book_cover"
        android:layout_alignRight="@+id/iv_book_cover"
        android:maxLines="2"
        android:ellipsize="end"
        android:textColor="@color/book_name"
        android:textSize="@dimen/book_name"
        android:id="@+id/tv_book_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_book_cover"
        android:text="书名"/>
    <TextView
        android:layout_alignLeft="@+id/iv_book_cover"
        android:layout_alignRight="@+id/iv_book_cover"
        android:maxLines="2"
        android:ellipsize="end"
        android:textSize="@dimen/book_time"
        android:textColor="@color/book_name"
        android:id="@+id/tv_last_visit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_book_name"
        android:text="10分钟前"/>
</RelativeLayout>